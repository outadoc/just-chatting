<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout_channel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/chatInputView"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/DarkTheme">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|enterAlways"
                app:scrimAnimationDuration="200">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax">

                    <ImageView
                        android:id="@+id/bannerImage"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="?attr/colorSurface"
                        android:tintMode="src_atop"
                        app:layout_constraintBottom_toBottomOf="@id/spacerBottom"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="#8C000000"
                        tools:src="@tools:sample/backgrounds/scenic" />

                    <Space
                        android:id="@+id/spacerTop"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toTopOf="@+id/toolbar"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/toolbar"
                        tools:layout_height="16dp" />

                    <com.google.android.material.appbar.MaterialToolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:minHeight="?attr/actionBarSize"
                        app:layout_constraintBottom_toTopOf="@id/title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/spacerTop">

                        <ImageButton
                            android:id="@+id/follow"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="end"
                            android:layout_marginEnd="7dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/baseline_favorite_border_black_24"
                            android:visibility="gone"
                            app:tint="?attr/colorOnBackground"
                            tools:visibility="visible" />

                        <ImageView
                            android:id="@+id/watchLive"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="end"
                            android:layout_marginEnd="7dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/open_player"
                            android:padding="4dp"
                            android:src="@drawable/ic_livetv"
                            android:visibility="gone"
                            app:tint="?attr/colorOnBackground"
                            tools:visibility="visible" />

                    </com.google.android.material.appbar.MaterialToolbar>

                    <ImageView
                        android:id="@+id/userImage"
                        style="@style/UserPicture"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/toolbar"
                        tools:src="@tools:sample/backgrounds/scenic"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:maxLines="3"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:visibility="gone"
                        app:layout_constraintBottom_toTopOf="@+id/gameName"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/userImage"
                        app:layout_constraintTop_toBottomOf="@+id/toolbar"
                        app:layout_constraintVertical_chainStyle="packed"
                        tools:text="@tools:sample/lorem/random"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/gameName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:gravity="start"
                        android:maxLines="1"
                        android:textAlignment="viewStart"
                        android:visibility="gone"
                        app:layout_constraintBottom_toTopOf="@+id/viewers"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/userImage"
                        app:layout_constraintTop_toBottomOf="@+id/title"
                        tools:text="@tools:sample/lorem/random"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/viewers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toTopOf="@id/lastBroadcast"
                        app:layout_constraintEnd_toStartOf="@id/uptime"
                        app:layout_constraintStart_toEndOf="@id/userImage"
                        app:layout_constraintTop_toBottomOf="@+id/gameName"
                        tools:text="1337499 viewers"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/uptime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toTopOf="@id/lastBroadcast"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/viewers"
                        app:layout_constraintTop_toBottomOf="@+id/gameName"
                        tools:text="8:21:33 uptime"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/lastBroadcast"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toTopOf="@+id/userName"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/userImage"
                        app:layout_constraintTop_toBottomOf="@+id/uptime"
                        tools:text="Last broadcast %s"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toTopOf="@+id/userCreated"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/userImage"
                        app:layout_constraintTop_toBottomOf="@+id/lastBroadcast"
                        tools:text="@sample/games.json/top/game/name"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/userCreated"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toTopOf="@+id/userFollowers"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/userImage"
                        app:layout_constraintTop_toBottomOf="@+id/userName"
                        tools:text="Created at 123456"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/userFollowers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toTopOf="@+id/userViews"
                        app:layout_constraintEnd_toStartOf="@id/userViews"
                        app:layout_constraintStart_toEndOf="@id/userImage"
                        app:layout_constraintTop_toBottomOf="@+id/userCreated"
                        tools:text="123456 followers"
                        tools:visibility="visible" />

                    <TextView
                        android:id="@+id/userViews"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:visibility="gone"
                        app:layout_constraintBottom_toTopOf="@+id/spacerBottom"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/userFollowers"
                        app:layout_constraintTop_toBottomOf="@+id/userCreated"
                        tools:text="123456 views"
                        tools:visibility="visible" />

                    <Space
                        android:id="@+id/spacerBottom"
                        android:layout_width="0dp"
                        android:layout_height="16dp"
                        app:layout_constraintBottom_toTopOf="@+id/bannerImage"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/userViews" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <com.github.andreyasadchy.xtra.ui.view.chat.ChatView
            android:id="@+id/chatView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.github.andreyasadchy.xtra.ui.view.chat.ChatInputView
        android:id="@+id/chatInputView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurfaceVariant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/coordinatorLayout_channel" />

</androidx.constraintlayout.widget.ConstraintLayout>
