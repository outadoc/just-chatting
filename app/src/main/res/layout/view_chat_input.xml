<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexboxChatMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryContainer"
        android:visibility="gone"
        app:flexWrap="wrap"
        app:justifyContent="space_evenly"
        tools:visibility="visible">

        <TextView
            android:id="@+id/textEmote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/room_emote"
            android:textAppearance="?attr/textAppearanceLabelMedium"
            android:textColor="?attr/colorOnPrimaryContainer"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textFollowers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceLabelMedium"
            android:textColor="?attr/colorOnPrimaryContainer"
            android:visibility="gone"
            tools:text="@string/room_followers_min"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textUnique"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/room_unique"
            android:textAppearance="?attr/textAppearanceLabelMedium"
            android:textColor="?attr/colorOnPrimaryContainer"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textSlow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceLabelMedium"
            android:textColor="?attr/colorOnPrimaryContainer"
            android:visibility="gone"
            tools:text="@string/room_slow"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/textSubs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@string/room_subs"
            android:textAppearance="?attr/textAppearanceLabelMedium"
            android:textColor="?attr/colorOnPrimaryContainer"
            android:visibility="gone"
            tools:visibility="visible" />

    </com.google.android.flexbox.FlexboxLayout>

    <LinearLayout
        android:id="@+id/messageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:animateLayoutChanges="true"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/viewPager"
        tools:visibility="visible">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutChat"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            app:endIconDrawable="@drawable/ic_mood"
            app:endIconMode="custom"
            app:hintEnabled="false">

            <MultiAutoCompleteTextView
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:completionThreshold="1"
                android:hint="@string/chat_input_hint"
                android:imeOptions="actionSend|flagNoFullscreen"
                android:importantForAutofill="no"
                android:inputType="textCapSentences|textAutoCorrect"
                android:padding="4dp"
                android:textAppearance="?textAppearanceBodyLarge"
                tools:ignore="LabelFor"
                tools:visibility="visible" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_backspace"
            android:visibility="gone"
            app:tint="?attr/colorOnSurfaceVariant"
            tools:visibility="visible" />

        <ImageButton
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_send"
            android:visibility="gone"
            app:tint="?attr/colorOnSurfaceVariant"
            tools:visibility="visible" />

    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="?colorSurface"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            app:tabMaxWidth="0dp"
            app:tabMode="fixed" />

    </androidx.viewpager.widget.ViewPager>

</merge>

