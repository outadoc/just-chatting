<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseDarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/accent</item>
        <item name="primaryColor">@color/primaryDark</item>
        <item name="textColor">@android:color/white</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:windowBackground">?attr/primaryColor</item>
        <item name="android:colorBackground">?attr/primaryColor</item>
        <item name="navBarStyle">@style/NavBarDark</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDark</item> <!--player-->
        <item name="dividerColor">@color/secondaryDark</item>
        <item name="android:textColorSecondary">@color/secondaryTextColorDark</item>
        <item name="secondaryTextColor">@color/secondaryTextColorDark</item>
        <item name="colorButtonNormal">@color/secondaryDark</item>
        <item name="android:dialogTheme">@style/DialogDark</item> <!--download dialog-->
        <item name="alertDialogTheme">@style/DialogDark</item> <!--settings, sleep timer, log out-->
        <item name="android:alertDialogTheme">@style/DialogDark</item> <!--delete video, permissions?-->
        <item name="radioButtonStyle">@style/RadioButton</item>
        <item name="chatStatus">@color/chatStatusDark</item>
        <item name="chatRedeem">@color/accent</item>
        <item name="preferenceTheme">@style/prefDark</item>
    </style>

    <style name="BaseLightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/accent</item>
        <item name="primaryColor">@color/primaryLight</item>
        <item name="textColor">@android:color/black</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:windowBackground">?attr/primaryColor</item>
        <item name="android:colorBackground">?attr/primaryColor</item>
        <item name="navBarStyle">@style/NavBarLight</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetLight</item>
        <item name="dividerColor">@color/secondaryLight</item>
        <item name="android:textColorSecondary">@color/secondaryTextColorLight</item>
        <item name="secondaryTextColor">@color/secondaryTextColorLight</item>
        <item name="colorButtonNormal">@color/secondaryLight</item>
        <item name="android:dialogTheme">@style/DialogLight</item>
        <item name="alertDialogTheme">@style/DialogLight</item>
        <item name="android:alertDialogTheme">@style/DialogLight</item>
        <item name="radioButtonStyle">@style/RadioButton</item>
        <item name="chatStatus">@color/chatStatusLight</item>
        <item name="chatRedeem">@color/accent</item>
        <item name="preferenceTheme">@style/prefLight</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="BaseAmoledTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorAccent">@android:color/white</item>
        <item name="primaryColor">@android:color/black</item>
        <item name="textColor">@android:color/white</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:windowBackground">?attr/primaryColor</item>
        <item name="android:colorBackground">?attr/primaryColor</item>
        <item name="navBarStyle">@style/NavBarAmoled</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetAmoled</item>
        <item name="dividerColor">@color/secondaryDark</item>
        <item name="android:textColorSecondary">@color/secondaryTextColorDark</item>
        <item name="secondaryTextColor">@color/secondaryTextColorDark</item>
        <item name="colorButtonNormal">@color/secondaryAmoled</item>
        <item name="android:dialogTheme">@style/DialogAmoled</item>
        <item name="alertDialogTheme">@style/DialogAmoled</item>
        <item name="android:alertDialogTheme">@style/DialogAmoled</item>
        <item name="radioButtonStyle">@style/RadioButton</item>
        <item name="chatStatus">@color/chatStatusDark</item>
        <item name="chatRedeem">@color/accent</item>
        <item name="preferenceTheme">@style/prefDark</item>
    </style>

    <style name="BaseBlueTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/accent</item>
        <item name="primaryColor">@color/primaryBlue</item>
        <item name="textColor">@android:color/white</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:windowBackground">?attr/primaryColor</item>
        <item name="android:colorBackground">?attr/primaryColor</item>
        <item name="navBarStyle">@style/NavBarBlue</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetBlue</item>
        <item name="dividerColor">@color/secondaryTextColorBlue</item>
        <item name="android:textColorSecondary">@color/secondaryTextColorBlue</item>
        <item name="secondaryTextColor">@color/secondaryTextColorBlue</item>
        <item name="colorButtonNormal">@color/secondaryBlue</item>
        <item name="android:dialogTheme">@style/DialogBlue</item>
        <item name="alertDialogTheme">@style/DialogBlue</item>
        <item name="android:alertDialogTheme">@style/DialogBlue</item>
        <item name="radioButtonStyle">@style/RadioButton</item>
        <item name="chatStatus">@color/chatStatusDark</item>
        <item name="chatRedeem">@color/accent</item>
        <item name="preferenceTheme">@style/prefDark</item>
    </style>

    <style name="DarkTheme" parent="BaseDarkTheme" />
    <style name="LightTheme" parent="BaseLightTheme" />
    <style name="AmoledTheme" parent="BaseAmoledTheme" />
    <style name="BlueTheme" parent="BaseBlueTheme" />

    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardBackgroundColor">?attr/primaryColor</item>
    </style>

    <style name="NavBarDark">
        <item name="android:background">@color/primaryDark</item>
        <item name="itemIconTint">@color/nav_bar_dark</item>
        <item name="itemTextColor">@color/nav_bar_dark</item>
    </style>

    <style name="NavBarLight">
        <item name="android:background">@color/primaryLight</item>
        <item name="itemIconTint">@color/nav_bar_light</item>
        <item name="itemTextColor">@color/nav_bar_light</item>
    </style>

    <style name="NavBarAmoled">
        <item name="android:background">@android:color/black</item>
        <item name="itemIconTint">@color/nav_bar_dark</item>
        <item name="itemTextColor">@color/nav_bar_dark</item>
    </style>

    <style name="NavBarBlue">
        <item name="android:background">@color/primaryBlue</item>
        <item name="itemIconTint">@color/nav_bar_blue</item>
        <item name="itemTextColor">@color/nav_bar_blue</item>
    </style>

    <style name="BottomSheetDark" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:backgroundTint">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/secondaryDark</item>
        <item name="radioButtonStyle">@style/RadioButton</item>
    </style>

    <style name="BottomSheetLight" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:backgroundTint">@color/primaryLight</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/secondaryLight</item>
        <item name="radioButtonStyle">@style/RadioButton</item>
    </style>

    <style name="BottomSheetAmoled" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:backgroundTint">@android:color/black</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorButtonNormal">@color/secondaryAmoled</item>
        <item name="radioButtonStyle">@style/RadioButton</item>
    </style>

    <style name="BottomSheetBlue" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:backgroundTint">@color/primaryBlue</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/secondaryBlue</item>
        <item name="radioButtonStyle">@style/RadioButton</item>
    </style>

    <style name="DialogDark" parent="Theme.MaterialComponents.Dialog">
        <item name="android:background">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="buttonBarButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogLight" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:background">@color/primaryLight</item>
        <item name="colorAccent">@color/accent</item>
        <item name="buttonBarButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogAmoled" parent="Theme.MaterialComponents.Dialog">
        <item name="android:background">@android:color/black</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="buttonBarButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogBlue" parent="Theme.MaterialComponents.Dialog">
        <item name="android:background">@color/primaryBlue</item>
        <item name="colorAccent">@color/accent</item>
        <item name="buttonBarButtonStyle">@style/DialogButtonStyle</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="Thumbnail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">H,16:9</item>
    </style>

    <style name="ThumbnailItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="VideoTitle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="UserPicture">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="Search">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:src">@drawable/baseline_search_black_24</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">?attr/textColor</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="MenuButton">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:src">@drawable/baseline_more_vert_black_24</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">?attr/textColor</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="MediaSpinner">
        <item name="android:id">@id/spinner</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
    </style>

    <style name="VideoProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:max">100</item>
        <item name="android:scaleY">1.5</item>
        <item name="android:layoutDirection" tools:ignore="NewApi">ltr</item>
    </style>

    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="prefDark" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="prefLight" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="android:tint">@android:color/black</item>
    </style>

</resources>
