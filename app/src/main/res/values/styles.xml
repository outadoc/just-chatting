<resources>

    <style name="BaseLightTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="BaseDarkTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="LightTheme" parent="BaseLightTheme" />

    <style name="DarkTheme" parent="BaseDarkTheme" />

    <style name="AppTheme" parent="LightTheme" />

    <style name="Card" parent="Widget.Material3.CardView.Filled">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BottomSheetLight" parent="Theme.Material3.Light.BottomSheetDialog" />

    <style name="BottomSheetAmoled" parent="Theme.Material3.Dark.BottomSheetDialog" />

    <style name="DialogLight" parent="Theme.Material3.Light.Dialog" />

    <style name="DialogAmoled" parent="Theme.Material3.Dark.Dialog" />

    <style name="Thumbnail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">H,16:9</item>
    </style>

    <style name="UserPicture">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>
