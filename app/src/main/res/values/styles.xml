<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseLightTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="BaseDarkTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="LightTheme" parent="BaseLightTheme" />

    <style name="DarkTheme" parent="BaseDarkTheme" />

    <style name="AppTheme" parent="LightTheme" />

    <style name="Card" parent="Widget.Material3.CardView.Outlined">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BottomSheetLight" parent="Theme.Material3.Light.BottomSheetDialog" />

    <style name="BottomSheetAmoled" parent="Theme.Material3.Dark.BottomSheetDialog" />

    <style name="DialogLight" parent="Theme.Material3.Light.Dialog" />

    <style name="DialogAmoled" parent="Theme.Material3.Dark.Dialog" />

    <style name="Thumbnail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">H,16:9</item>
    </style>

    <style name="ThumbnailItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="VideoTitle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="UserPicture">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="Search">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:src">@drawable/baseline_search_black_24</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">?attr/colorOnSurface</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="MenuButton">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:src">@drawable/baseline_more_vert_black_24</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:tint">?attr/colorOnSurface</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="MediaSpinner">
        <item name="android:id">@id/spinner</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
    </style>

    <style name="VideoProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:max">100</item>
        <item name="android:scaleY">1.5</item>
        <item name="android:layoutDirection" tools:ignore="NewApi">ltr</item>
    </style>

    <style name="RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>
