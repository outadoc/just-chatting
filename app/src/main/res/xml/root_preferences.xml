<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="@string/settings_ui"
        app:iconSpaceReserved="false" />
    <ListPreference
        android:defaultValue="auto"
        android:entries="@array/languageEntries"
        android:entryValues="@array/language"
        android:key="ui_language"
        android:summary="%s"
        android:title="@string/language"
        app:iconSpaceReserved="false" />

    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:key="ui_truncateviewcount"
        android:title="@string/truncated_view_counts"
        app:iconSpaceReserved="false" />

    <SwitchPreferenceCompat
        android:defaultValue="true"
        android:key="ui_uptime"
        android:title="@string/show_uptime"
        app:iconSpaceReserved="false" />

    <SwitchPreferenceCompat
        android:defaultValue="true"
        android:key="ui_tags"
        android:title="@string/show_tags"
        app:iconSpaceReserved="false" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/followButtonEntries"
        android:entryValues="@array/miscValues"
        android:key="ui_follow_button"
        android:summary="%s"
        android:title="@string/follow_button"
        app:iconSpaceReserved="false" />

    <PreferenceCategory
        android:title="@string/settings_chat"
        app:iconSpaceReserved="false" />

    <SwitchPreferenceCompat
        android:defaultValue="true"
        android:key="chat_randomcolor"
        android:title="@string/randomcolor"
        app:iconSpaceReserved="false" />

    <SwitchPreferenceCompat
        android:defaultValue="true"
        android:key="animatedGifEmotes"
        android:title="@string/animated_emotes"
        app:iconSpaceReserved="false" />

    <SwitchPreferenceCompat
        android:defaultValue="true"
        android:key="chat_zerowidth"
        android:title="@string/zerowidth"
        app:iconSpaceReserved="false" />

    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:key="chat_timestamps"
        android:title="@string/timestamps"
        app:iconSpaceReserved="false" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/timestampEntries"
        android:entryValues="@array/timestampValues"
        android:key="chat_timestamp_format"
        android:summary="%s"
        android:title="@string/timestamp_format"
        app:iconSpaceReserved="false" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/chatFirstMsgEntries"
        android:entryValues="@array/miscValues"
        android:key="chat_firstmsg_visibility"
        android:summary="%s"
        android:title="@string/chat_firstmsg_visibility"
        app:iconSpaceReserved="false" />

    <SwitchPreferenceCompat
        android:defaultValue="true"
        android:key="chat_show_usernotice"
        android:title="@string/show_usernotice"
        app:iconSpaceReserved="false" />

    <SwitchPreferenceCompat
        android:defaultValue="true"
        android:key="chat_show_clearmsg"
        android:title="@string/show_clearmsg"
        app:iconSpaceReserved="false" />

    <SwitchPreferenceCompat
        android:defaultValue="true"
        android:key="chat_show_clearchat"
        android:title="@string/show_clearchat"
        app:iconSpaceReserved="false" />

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/imageLibraryEntries"
        android:entryValues="@array/imageLibraryValues"
        android:key="chat_image_library"
        android:summary="%s"
        android:title="@string/image_library"
        app:iconSpaceReserved="false" />

    <ListPreference
        android:defaultValue="4"
        android:entries="@array/imageQualityEntries"
        android:entryValues="@array/imageQualityValues"
        android:key="chat_image_quality"
        android:summary="%s"
        android:title="@string/image_quality"
        app:iconSpaceReserved="false" />

    <SeekBarPreference
        android:defaultValue="600"
        android:key="chat_limit"
        android:max="1000"
        android:title="@string/message_limit"
        app:iconSpaceReserved="false"
        app:min="1"
        app:showSeekBarValue="true" />

    <SwitchPreferenceCompat
        android:defaultValue="true"
        android:key="chat_recent"
        android:title="@string/recentMsg_enable"
        app:iconSpaceReserved="false" />

    <SeekBarPreference
        android:defaultValue="100"
        android:key="chat_recent_limit"
        android:max="800"
        android:title="@string/recentMsg_limit"
        app:iconSpaceReserved="false"
        app:min="1"
        app:showSeekBarValue="true" />

    <SwitchPreferenceCompat
        android:defaultValue="true"
        android:key="chat_pubsub_enabled"
        android:title="@string/enable_pubsub"
        app:iconSpaceReserved="false" />

    <PreferenceCategory
        android:title="@string/settings_player"
        app:iconSpaceReserved="false" />

    <Preference
        android:key="clear_video_positions"
        android:title="@string/clear_video_positions"
        app:iconSpaceReserved="false" />

    <Preference
        android:key="api_settings"
        android:title="@string/api_settings"
        app:iconSpaceReserved="false" />

    <Preference
        android:key="admin_settings"
        android:title="@string/admin_settings"
        app:iconSpaceReserved="false" />

    <PreferenceCategory
        android:title="@string/settings_debug"
        app:iconSpaceReserved="false" />

    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:key="debug_chat_fullmsg"
        android:title="@string/show_copy_fullmsg"
        app:iconSpaceReserved="false" />

    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:key="debug_secondview"
        android:title="@string/debug_secondview"
        app:iconSpaceReserved="false" />

</androidx.preference.PreferenceScreen>
