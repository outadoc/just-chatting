{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [{
    "groupName": "kotlin-monorepo",
    "matchPackageNames": [
      "composeOptions"
    ],
    "matchSourceUrls": [
      "https://github.com/JetBrains/kotlin",
      "https://github.com/google/ksp"
    ]
  }],
  "semanticCommits": "enabled"
}
