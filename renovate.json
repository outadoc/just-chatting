{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "groupName": "kotlin-monorepo",
      "matchPackageNames": [
        "/^androidx.compose.compiler/",
        "/^com.google.devtools.ksp/",
        "/^org.jetbrains.compose/",
        "/^org.jetbrains.kotlin[^x]/"
      ]
    },
    {
      "groupName": "koin",
      "matchPackageNames": [
        "/^io.insert-koin/"
      ]
    },
    {
      "automerge": true,
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ],
  "semanticCommits": "enabled"
}
